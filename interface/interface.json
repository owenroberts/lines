{
	"interface": {
		"label": "Interface",
		"uis": [
			{
				"module": "ui",
				"sub": "settings",
				"list": [
					{
						"type": "UIButton",
						"key": "ctrl-s",
						"fromModule": {
							"callback": "save"
						},
						"params": {
							"text": "Save"
						}
					},
					{
						"type": "UIButton",
						"key": "alt-s",
						"fromModule": {
							"callback": "load"
						},
						"params": {
							"text": "Load"
						}
					},
					{
						"type": "UIButton",
						"fromModule": {
							"callback": "clear"
						},
						"params": {
							"text": "Clear"
						}
					},
					{
						"type": "UIToggle",
						"fromModule": {
							"callback": "toggleSaveSettings"
						},
						"params": {
							"onText": "Auto Save On",
							"offText": "Auto Save Off"
						}
					}
				]
			},
			{
				"module": "ui",
				"list": [
					{ "type": "UIRow" },
					{
						"type": "UIToggle",
						"face": "timelineView",
						"fromModule": {
							"callback": "toggleTimelineView"
						},
						"params": {
							"onText": "Timeline View",
							"offText": "Timeline View"
						}
					},
					{
						"type": "UIToggle",
						"face": "rl",
						"fromModule": {
							"callback": "toggleRL"
						},
						"params": {
							"onText": "R/L",
							"offText": "L/R"
						}
					},
					{
						"row": true,
						"type": "UINumberStep",
						"face": "interfaceScale",
						"label": "Scale",
						"fromModule": {
							"callback": "updateScale"
						},
						"params": {
							"value": 11,
							"min": 10,
							"max": 40
						}
					},
					{
						"type": "UINumberStep",
						"label": "Max panels",
						"number": "maxPanels",
						"fromModule": {
							"value": "maxPanels"
						}
					},
					{
						"type": "UIToggleCheck",
						"fromModule": {
							"callback": "toggleMaxWidth"
						},
						"params": {
							"text": "Max Width",
							"class": "left-end"
						}
					},
					{
						"type": "UINumber",
						"face": "maxWidthDisplay",
						"fromModule": {
							"callback": "setMaxWidth",
							"value": "maxWidth"
						},
						"params": {
							"class": "right-end"
						}
					}
				]
			}
		]
	},
	"quickRef": {
		"label": "Quick Ref",
		"uis": [
			{
				"module": "ui",
				"sub": "quickRef",
				"list": [
					{
						"type": "UINumberStep",
						"label": "Scale",
						"face": "quickRefScale",
						"fromModule": {
							"callback": "setScale",
							"value": "fontSize"
						},
						"params": {
							"min": 10,
							"max": 40
						}
					},
					{
						"type": "UIButton",
						"fromModule": {
							"callback": "reset"
						},
						"params": {
							"text": "Reset"
						}
					},
					{
						"type": "UIButton",
						"fromModule": {
							"callback": "addRef"
						},
						"params": {
							"text": "+"
						}
					},
					{
						"type": "UIButton",
						"key": "ctrl-space",
						"fromModule": {
							"callback": "openQuickMenu"
						}
					}
				]
			}
		]
	},
	"workspaces": {
		"label": "Workspaces",
		"uis": [
			{
				"module": "ui",
				"sub": "settings",
				"list": [
				{
						"type": "UIButton",
						"key": "alt-w",
						"fromModule": {
							"callback": "saveLayout"
						},
						"params": {
							"text": "Save Interface Layout"
						}
					},
					{
						"type": "UIButton",
						"fromModule": {
							"callback": "loadLayoutFile"
						},
						"params": {
							"text": "Load Interface Layout"
						}
					},
					{
						"row": true,
						"type": "UILabel",
						"params": {
							"text": "Defaults"
						}
					},
					{
						"row": true,
						"type": "UIButton",
						"fromModule": {
							"callback": "loadLayoutFile"
						},
						"params": {
							"text": "Animation",
							"args": ["/animate/interface/defaults/Animation.json"]
						}
					}
				]
			}
		]	
	}
}